source "https://rubygems.org"

gem "jekyll"

group :jekyll_plugins do
    gem "wdm", "~> 0.1.0" if Gem.win_platform?
    gem 'jekyll-sitemap'
    gem 'jekyll-seo-tag'
    gem 'jekyll-admin'
    gem "jekyll-paginate-v2"
    gem "jekyll-tagging-related_posts"
    gem "jekyll-auto-image"
    gem 'jekyll-autolink_email'
    gem "jekyll-youtube"
end